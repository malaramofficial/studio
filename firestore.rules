/**
 * Core Philosophy: This ruleset enforces a strict security model that separates public, read-only content from private, user-owned data and admin-only writable data.
 * The primary goal is to allow any user (authenticated or not) to browse educational content like the syllabus and available exams,
 * while ensuring that a user's personal data is accessible only by them, and administrative content like ad banners can only be modified by a designated admin.
 *
 * Data Structure:
 * 1. Top-level public collections: `/exams`, `/syllabus`, `/meta`, and `/adBanners` contain globally accessible content.
 * 2. User-specific data trees: The `/users/{userId}` path is the root for all data private to a specific user.
 *
 * Key Security Decisions:
 * - User data is private: All documents under `/users/{userId}` are strictly controlled by the matching user.
 * - Admin content is protected: Collections like `/adBanners` are publicly readable but writable only by a designated admin user.
 * - Public content is read-only: Collections like `/exams` and `/syllabus` are publicly readable but locked against client writes.
 * - Default secure posture: Write access is denied by default and only explicitly granted based on ownership or admin status.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---

    /**
     * Checks if the user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Checks if the authenticated user's UID matches the provided userId.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * Checks if the request is from the designated admin user.
     * Replace 'YOUR_ADMIN_UID' with the actual UID of the admin account.
     * For this app, the creator's UID is used as the admin.
     */
    function isAdmin() {
      // THIS IS A PLACEHOLDER - A real app would have a more robust role system.
      // For now, we will assume a single hardcoded admin UID.
      return isSignedIn() && request.auth.uid == "sS9gXNTrbYV6D19T1d6E82F7i7E2"; // Replace with your actual Admin UID
    }

    /**
     * Checks for ownership on an existing document. Used for update/delete.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }
    
    /**
     * Validates that the user is creating their own user document and
     * that the document's internal `id` field matches the path `userId`.
     */
    function isCreatingOwnUserDoc(userId) {
      return isOwner(userId) && request.resource.data.id == userId;
    }
    
    /**
     * Validates that a user is creating a subcollection document where the
     * internal `userId` field correctly references them.
     */
    function isCreatingOwnSubDoc(userId) {
      return isOwner(userId) && request.resource.data.userId == userId;
    }
    
    /**
     * Enforces immutability of the internal `userId` field during updates.
     */
    function isUserIdImmutable() {
      return request.resource.data.userId == resource.data.id;
    }
    
    /**
     * Enforces immutability of the internal `id` field for a root user document.
     */
    function isUserDocIdImmutable() {
      return request.resource.data.id == resource.data.id;
    }

    // --- User Data Rules ---

    /**
     * @description Manages user profile documents.
     * @path /users/{userId}
     * @principle Restricts access to a user's own data tree and prevents user enumeration.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isCreatingOwnUserDoc(userId);
      allow update: if isExistingOwner(userId) && isUserDocIdImmutable();
      allow delete: if isExistingOwner(userId);

      /**
       * @description Manages a user's exam attempt records.
       * @path /users/{userId}/writtenExamAttempts/{writtenExamAttemptId}
       * @principle Enforces strict ownership for all user-generated content.
       */
      match /writtenExamAttempts/{writtenExamAttemptId} {
        allow get, list: if isOwner(userId);
        allow create: if isCreatingOwnSubDoc(userId);
        allow update: if isExistingOwner(userId) && isUserIdImmutable();
        allow delete: if isExistingOwner(userId);

        /**
         * @description Manages a user's answers within a specific exam attempt.
         * @path /users/{userId}/writtenExamAttempts/{writtenExamAttemptId}/answers/{answerId}
         * @principle Path-based ownership is inherited, securing nested data.
         */
        match /answers/{answerId} {
          allow get, list, create, update, delete: if isOwner(userId);
        }
      }
    }

    // --- Public, Read-Only Content Rules ---

    /**
     * @description Manages exam definitions.
     * @path /exams/{examId}
     * @principle Public content is read-only. Writes handled by a trusted backend.
     */
    match /exams/{examId} {
      allow get, list: if true;
      allow create, update, delete: if false; // Admin-only writes

      /**
       * @description Manages questions for a specific exam.
       * @path /exams/{examId}/questions/{questionId}
       */
      match /questions/{questionId} {
        allow get, list: if true;
        allow create, update, delete: if false;
      }
    }

    /**
     * @description Manages syllabus data.
     * @path /syllabus/{path=**}
     * @principle Core application data is client-immutable.
     */
    match /syllabus/{path=**} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }
    
    /**
     * @description Manages application creator metadata.
     * @path /meta/creator/{creatorId}
     */
    match /meta/creator/{creatorId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    // --- Admin-Managed Content Rules ---

    /**
     * @description Manages ad banners. Publicly readable, but only writable by an admin.
     * @path /adBanners/{bannerId}
     * @principle Segregates marketing content and restricts modifications to admins.
     */
    match /adBanners/{bannerId} {
        allow get, list: if true;
        allow create, update, delete: if isAdmin();
    }
  }
}
